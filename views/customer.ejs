<%- include('layout/header') %> 
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class=" mb-4 mb-lg-0">
        <div class="card mb-3" style="border-radius: .5rem;">
          <div class="row g-0">
            <div class=" text-center">
              <div class="card-body p-4">
                <h4><%= user.name %>'s Account</h4>
                <hr class="mt-0 mb-4">
                <div class="row pt-1">
                  <div class="col-6 mb-3">
                    <h6>Email</h6>
                    <p class="text-muted"><%= user.email %></p>
                  </div>
                  <div class="col-6 mb-3">
                    <h6>Current balance</h6>
                    <p class="text-muted"><%= user.balance %>$</p>
                  </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


<div class="container  border my-4 " style="border-radius: .5rem;">
  <div class="text-center m-0 p-0">
    <h5 class="my-3">Transaction form</h5>
    <hr>
  </div>
    <form method="post" action="/transactions/">
    <div class="mb-3">
      <label class="form-label">From:</label>
      <input type="text" class="form-control" name ="from" value = "<%= user.name %>" disabled>
      <input type="text" class="form-control" name ="from" value = "<%= user.name %>" hidden>
    </div>
    <div class="mb-3">
      <label class="form-label">To:</label>
      <select class="form-select" name="to" aria-label="Default select example">
        <option selected>select receriver</option>
        <% users.forEach(element => { %>
            <% if (element.name !== user.name) { %>
            <option value="<%= element.name %>" ><%= element.name %> </option> 
            <% } %>
        <% }) %>
      </select>
    </div>
    <div class="mb-3">
      <label class="form-label">Amount:</label>
      <input type="number" class="form-control" name ="amount">
    </div>
    <div class="text-center my-4">
      <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>
</div>




<%- include('layout/footer') %> 